def postRest(url):
    c.setopt(pycurl.POST, 0)
    c.setopt(pycurl.URL, url)
    response = cStringIO.StringIO()
    c.setopt(pycurl.WRITEFUNCTION, response.write)
    c.perform()
    return ET.XML(response.getvalue())

